<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- FORM VIEW: ORDER SUMMARY-->
    <record id="view_trenditon_order_summary_report_form" model="ir.ui.view">
        <field name="name">trendition.order.summary.report.form</field>
        <field name="model">trendition.order.summary.report</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="name" placeholder="Enter Report Name.." />
                    <group>
                        <field name="customer_reference" placeholder="Select Enter Customer Reference..."/>
                        <field name="customer_ids" widget="many2many_tags" options="{'no_create':True}"/>
                    </group>
                    <group>
                        <field name="company_id" options="{'no_create':True}"/>
                        <field name="warehouse_id" options="{'no_create':True}"/>
                    </group>
                </group>
                <group string="Filters">
                    <group>
                        <field name="date_from" required="1"/>
                        <field name="date_to" required="1"/>
                    </group>

                    <!--                    <field name="customer_reference" placeholder="Select Enter Customer Reference..."/>-->
                    <!--                    <field name="customer_ids" widget="many2many_tags" placeholder="Select Customers..."/>-->
                    <!--&lt;!&ndash;                    <field name="category_ids" widget="many2many_tags" placeholder="Select Product Categories..."/>&ndash;&gt;-->
                    <!--&lt;!&ndash;                    <field name="product_ids" widget="many2many_tags" placeholder="Select Products..."/>&ndash;&gt;-->
                </group>
                <footer>
                    <button name="generate_pdf_report" string="Generate PDF Report" type="object" class="oe_highlight"/>
                    OR
                    <button special="cancel" string="Close" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- ACTION : ORDER SUMMARY-->
    <record id="action_trendition_order_summary_report_form" model="ir.actions.act_window">
        <field name="name">Order Summary Wizard</field>
        <field name="res_model">trendition.order.summary.report</field>
        <!--        <field name="view_type">form</field>-->
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <!--MENU: ORDER SUMMARY-->
    <menuitem parent="stock.menu_warehouse_report" id="trendition_report_menu" action="action_trendition_order_summary_report_form" string="Order Summary Report"/>

</odoo>
