<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_purchase_order_form_inherit_edi" model="ir.ui.view">
        <field name="name">view.purchase.order.form.inherit.edi</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
            <data>
                <xpath expr="//notebook//page[@name='purchase_delivery_invoice']" position="inside">
                    <group string='EDI Document Information'>
                        <field name="edi_status"/>
                        <field name="edi_date"/>
                    </group>
                </xpath>
            </data>
        </field>
    </record>
</odoo>